<!DOCTYPE html>
<html>
  <head>
    <title>PinkFish</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'Edit User', edit_user_registration_path, :class => "" %></li>
        <li><%= link_to 'Edit Avatar', avatar_path, :class => "" %></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, :method => 'delete', :class => "" %></li>
      </ul>
    <% end %>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
